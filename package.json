    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tsc": "^2.0.4",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
